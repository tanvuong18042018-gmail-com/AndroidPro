<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewNumberRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="1"
        android:textColor="#FFE300"
        android:textSize="14sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageViewAvatarPlayerRank"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/textViewNamePlayerRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Nguyen Hoang Phuc"
        android:textAlignment="textEnd"
        android:layout_weight="1"
        android:textColor="#00FFB7"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/textViewScorePlayerRank"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_marginEnd="0dp"
        android:layout_weight="1"
        android:text="25687"
        android:textAlignment="textEnd"
        android:textColor="#FF0000"
        android:textSize="18sp"
        android:textStyle="bold" />
</LinearLayout>
